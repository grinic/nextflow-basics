
// conda.enabled = true

// Make sure Docker doesn't use root.
process.container = 'ngritti/pymage-training'

// Make sure to mount the drive where the data are!
// And make sure it has the right permissions!
// e.g. process.containerOptions = '-v /home/:/home/' if ont he local machine
// The following is for the server space: (you can also mount the whole /g/, not sure if it's bad practice)
process.containerOptions = '-v /g/mif/:/g/mif/'

// The following prevents the Docker from running as root
containerOptions = { workflow.containerEngine == "docker" ? '-u $(id -u):$(id -g)': null}

